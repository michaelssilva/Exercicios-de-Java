import java.util.Scanner;

public class SomaValores {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        int soma = 0;
        int valor;
        
        System.out.println("Digite valores positivos (digite um valor negativo para encerrar):");
        do {
            System.out.print("Valor: ");
            valor = scanner.nextInt();
            
            if (valor > 0) {
                soma += valor;
            } else if (valor < 0) {
                System.out.println("Valor negativo detectado. Encerrando entrada de dados.");
            }
        } while (valor >= 0);
        
        scanner.close();
        
        System.out.println("A soma dos valores digitados e: " + soma);
    }
}

