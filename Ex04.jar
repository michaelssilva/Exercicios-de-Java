 Programa que mostra qual e o menor numero*/

 
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Solicita que o usuerio digite os tres valores
        System.out.println("Digite o primeiro valor:");
        int valor1 = scanner.nextInt();
        
        System.out.println("Digite o segundo valor:");
        int valor2 = scanner.nextInt();
        
        System.out.println("Digite o terceiro valor:");
        int valor3 = scanner.nextInt();
        
        // Encontra o menor valor
        if (valor1 < valor2 && valor1 < valor3) {
            System.out.println("O menor numero e o numero: " + valor1);
        } else if (valor2 < valor1 && valor2 < valor3) {
            System.out.println("O menor numero e o numero: " + valor2);
        } else if (valor3 < valor1 && valor3 < valor2) {
            System.out.println("O menor numero e o numero: " + valor3);
        } else {
            System.out.println("Os numeros sao iguais.");
        }
        
        scanner.close();
    }
}
